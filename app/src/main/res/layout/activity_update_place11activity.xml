<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.UpdatePlace11activity">


    <ImageView
        android:id="@+id/imageViewUpdatePhoto"
        android:layout_width="match_parent"
        android:layout_height="281dp" />

    <EditText
        android:id="@+id/editTextUpdateName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="" />

    <EditText
        android:id="@+id/editTextUpdateDescription"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="" />

    <TextView
        android:id="@+id/textViewUpdateTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewUpdateWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewUpdateKilometers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewUpdateCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewUpdateHodnoceni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <Button
        android:id="@+id/bbtnUpdateUlozitZmeny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_ulozit_zmeny" />

</LinearLayout>